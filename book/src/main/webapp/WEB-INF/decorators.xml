<decorators defaultdir="/WEB-INF/decorators">
	<decorator name="default" page="defaultTemplate.jsp">
		<pattern>/home.html</pattern>
		<pattern>/contact.html</pattern>
		<pattern>/images/*.html</pattern>
	</decorator>
	<decorator name="admin" page="adminTemplate.jsp">
		<pattern>/admin.html</pattern>
		<pattern>/admin/category.html</pattern>
		<pattern>/admin/image.html</pattern>
	</decorator>
	<excludes>
		<pattern>/ajax/*</pattern>
	</excludes>
</decorators>